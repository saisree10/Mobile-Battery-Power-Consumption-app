<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingLeft="@dimen/dialog_mode_padding_left" android:paddingRight="@dimen/dialog_margin" style="@style/common_dialog_list_item_style"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/itemimage" android:paddingRight="@dimen/dialog_mode_padding_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mode_off" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
    <TextView android:ellipsize="marquee" android:id="@id/value" android:paddingLeft="@dimen/dialog_two_button_padding" android:singleLine="true" android:layout_toLeftOf="@id/icons" android:layout_toRightOf="@id/itemimage" style="@style/common_dialog_list_item_text_style" />
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/icons" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <ImageView android:id="@id/phone_status" android:paddingRight="@dimen/dialog_mode_two_status_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/statusbar_phone_on" />
        <ImageView android:id="@id/sms_status" android:paddingRight="@dimen/dialog_mode_two_status_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/statusbar_message_on" />
        <ImageView android:id="@id/wifi_status" android:paddingRight="@dimen/dialog_mode_two_status_padding" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/statusbar_wifi_on" />
        <ImageView android:id="@id/mobile_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/statusbar_mobile_on" />
    </LinearLayout>
</RelativeLayout>